# Pydantic AI Gateway (Required)
PYDANTIC_GATEWAY_API_KEY=your-gateway-api-key-here
PYDANTIC_GATEWAY_BASE_URL=https://gateway.pydantic.dev/proxy/openai/

# xAI (Optional - for fallback models)
XAI_API_KEY=your-xai-api-key-here

# Application
APP_NAME=IntentUI Backend
APP_VERSION=0.1.0
ENVIRONMENT=dev
DEBUG=false
LOG_LEVEL=info

# API
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=sqlite:///./intentui.db

# Backup
# Generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BACKUP_ENCRYPTION_KEY=
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2
BACKUP_ENABLED=true
